<div class = "container">
 <div class = "row">
  <div class = "col-md-8 offset-md-1">
   <h1>配送先登録/一覧</h1>
   <% if @delivery.errors.any? %>
  <%= @delivery.errors.count %>件のエラーが発生しました
  <% @delivery.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

   <%= form_with model: @delivery, local:true do |f| %>

   <h4>郵便番号(ハイフンなし)</h4>
   <%= f.text_field :postcode %>

   <h4>住所</h4>
   <%= f.text_field :address %>

   <h4>宛名</h4>
   <%= f.text_field :name %>
   <%= f.submit '新規登録', class: "btn btn-success" %>

   <table class = "table table-hover table-inverse">
    <tbody>
     <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
      <td></td>

     </tr>

     <% @deliveries.each do |d|%>
      <tr>
       <td><%= d.postcode %></td>
       <td><%= d.address %></td>
       <td><%= d.name %></td>
       <td>
        <%= link_to "編集する", edit_delivery_path(d.id), class: "btn btn-success" %>
       </td>
       <td>
        <%= link_to "削除する", delivery_path(d.id), method: :delete, class: "btn btn-danger" %>
       </td>
      </tr>

     <% end %>


    </tbody>
   </table>
   <% end %>
  </diV>
 </div>
</div>