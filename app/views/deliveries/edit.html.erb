<div class = "container">
 <div class = "row">
  <div class = "col-md-8 offset-md-1">
　　<h1>配送先編集</h1>
　 <%= form_with model: @delivery, local:true do |f| %>

    <h4>郵便番号(ハイフンなし)</h4>
     <%= f.text_field :postcode %>

    <h4>住所</h4>
     <%= f.text_field :address %>

    <h4>宛名</h4>
     <%= f.text_field :name %>
     <%= f.submit '変更内容を保存', class: "btn btn-success" %>
   <% end %>
　</div>
 </div>
</div>