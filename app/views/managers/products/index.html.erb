<div class="container">
 <div class="row">
  <div class="col-lg-12">
   <h4>商品一覧</h4>
  <div class="icon"><%= link_to '新規登録', new_managers_product_path, class: "fas fa-plus-circle" %></div><!--アイコン設定後日-->
  <table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
			<tr>
				<th><%= product.id %></th>
				<th><%= link_to managers_product_path(product.id) do %><%= product.name %><% end %></th>
				<th><%= product.price %></th>
				<th><%= product.category.name %></th>
				<th><% if product.is_active == true %>
					販売中
					<% else %>
					販売停止中
					<% end %>
				</th>
			</tr>
		<% end %>
	</tbody>
  </table>
    <%= paginate @posts %>
  </div>
 </div>
</div>

