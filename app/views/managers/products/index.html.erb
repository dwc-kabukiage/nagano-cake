<div class="container">
 <div class="row">
  <div class="col-lg-12">
   <h4><span style="background-color: #EEEEEE">商品一覧</span></h4>
  <span style="margin-left: 1000px"><%= link_to '＋', new_managers_product_path, class: 'plus' %></span>
  <table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |product| %>
			<tr>
				<th><%= product.id %></th>
				<th><%= link_to managers_product_path(product.id) do %><%= product.name %><% end %></th>
				<th><%= product.price %></th>
				<th><%= product.category.name %></th>
				<th><% if product.is_active == true %>
					<span style="color: green">販売中</span>
					<% else %>
					<span style="color: gray">販売停止中</span>
					<% end %>
				</th>
			</tr>
		<% end %>
	</tbody>
  </table>
    <%= paginate @posts %>
  </div>
 </div>
</div>

