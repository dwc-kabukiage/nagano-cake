 <div class="container">
  <div class="row">
   <div class="col-lg-12">
 <h4>商品新規登録</h4>
 <p><%= form_with(model: @product, url: managers_products_path, method: :post, local: true) do |f| %></p>
 <br><%= f.label :商品画像 %>
 <br><%= f.attachment_field :image %>
 <br><br><%= f.label :商品名 %>
 <br><%= f.text_field :name %>
 <br><%= f.label :商品説明 %>
 <br><%= f.text_area :body %>
 <br><%= f.label :ジャンル %>
 <br><%= f.collection_select :category_id, Category.all, :id, :name %>
 <br><br><%= f.label :税抜価格 %>
 <br><%= f.text_field :price %>
 <br><p><%= f.label :販売ステータス %></p>
 <p><%= f.label :is_active, "販売中" %>
 <%= f.radio_button :is_active, true %>
 <%= f.label :is_active, "販売停止中" %>
 <%= f.radio_button :is_active, false %></p>
 <br><br><p><%= f.submit "新規登録",class:"btn-success" %></p>
 <% end %>
   </div>
 </div>
</div>