<div class="container">
 <div class="row">
  <div class="col-lg-12">
   <h4><span style="background-color: #EEEEEE">商品編集</span></h4>
  </div>
<%= form_with model: @product, url: managers_product_path, method: :patch, local: true do |f| %>
 <br><%= f.label :商品画像 %>
 <span style="margin-left: 100px"><%= f.attachment_field :image %></span>
 <br><br><%= f.label :商品名 %>
 <span style="margin-left: 117px"><%= f.text_field :name %></span>
 <br><br><%= f.label :商品説明 %>
 <span style="margin-left: 102px"><%= f.text_area :body %></span>
 <br><br><%= f.label :ジャンル %>
 <span style="margin-left: 105px"><%= f.collection_select :category_id, Category.all, :id, :name %></span>
 <br><br><%= f.label :税抜価格 %>
 <span style="margin-left: 102px"><%= f.text_field :price %>円</span>
 <br><br><%= f.label :販売ステータス %>
 <span style="margin-left: 60px"><%= f.radio_button :is_active, true %></span>
 <%= f.label :is_active, "販売中" %>
 <span style="margin-left: 30px"><%= f.radio_button :is_active, false %></span>
 <%= f.label :is_active, "販売停止中" %>
 <br><br><span style="margin-left: 200px"><%= f.submit "変更を保存",class:"btn btn-success" %></span>
<% end %>
 </div>
 
 </div>
</div>