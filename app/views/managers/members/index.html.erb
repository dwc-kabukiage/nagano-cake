<div class="container">
 <div class="row">
  <div class="col-lg-12">
<h4>会員一覧</h4>
<br><table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
    <tr>
      <td><%= member.id %></td>
      <td><%= link_to member.last_name+member.first_name, managers_member_path(member.id), class: 'color' %>
      </td>
      <td><%= member.email %></td>
      <td><% if member.is_deleted == false %>
          <span style="color: green">有効</span>
          <% else %>
        <span style="color: gray">退会済み</span>
          <% end %>
          </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% paginate @posts %>
  </div>
 </div>
</div>