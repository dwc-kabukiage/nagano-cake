<div class="container">
 <div class="row">
  <div class="col-lg-12">
<h4>ジャンル一覧・追加</h4>

<%= form_with model: @category, url: managers_categories_path, local: true do |f| %>

 <br><p>ジャンル名
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </p>

<% end %>

<br><table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to "編集する", edit_managers_category_path(category.id), class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>
 </div>
</div>