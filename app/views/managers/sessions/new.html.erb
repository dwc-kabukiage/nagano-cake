<div class='container manager_login'>
  <div class='row'>
    <div class="mx-auto" style="width:60%">
      <h2>管理者ログイン</h2>

      <%= form_with model: @manager, url: new_manager_session_path, local: true do |f| %>
        <div class="row no-gutters field">
          <%= f.label :email, "メールアドレス", class: "col-xl-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: 'col-xl-8' %>
        </div>

        <div class="row no-gutters field">
          <%= f.label :password, "パスワード", class: "col-xl-4" %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'col-xl-8' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-primary col-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
