<div class="container">
  <h2 class="pl-5">注文履歴詳細</h2>
  <table>
    <tr>
      <th>購入者</th>
      <td><%= @member.last_name + @member.first_name %></td>
  　</tr>
  　<tr>
  　   <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>〒<%= @order.postcode %>
          <%= @order.address %><br>
          <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_for(@order, url: managers_order_path, method: :patch) do |f| %>
         <%= f.select :received_status, Order.received_statuses.keys %>
         <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
  </table>
  <div class="row">
    <div class="col-md-9">
      <table class="table  table-bordered">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td>
            <% @order_details.each do |order_detail| %>
            <%= f.selct :make_status, OrderDetail.make_statuses.keys %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <table>
        <tr>
          <th>商品合計</th>
          <td>円</td>
          </tr>
          <tr>
          <th>送料</th>
          <td><%= @order.freight %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.claim %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>