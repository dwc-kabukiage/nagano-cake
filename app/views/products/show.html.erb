<div class="container">
 <div class="row">
 	<div class="col-lg-6">
  <%= attachment_image_tag(@product, :image, size: "400x300", fallback: "default.png") %>
</div>
<div class="col-lg-6">
  <h4><%= @product.name %></h4>
	<p><%= @product.body %></p>
	<h4>￥<%= (@product.price * 1.1).to_i %><span>（税込）</span></h4>
	<h2>￥<%= (@product.price * 1.1).to_i %><span>（税込）</span></h2>
	<%= form_with(model: @cart_item, url: cart_items_path, method: :post, local: true) do |f| %>
		<%= f.label :number, "個数選択" %>
		<%= f.number_field :number, min: 1, max: 10, placeholder: '個数選択' %>
		<%= f.hidden_field :product_id, :value => @product.id %>
		<%= f.submit "カートに入れる", class: "btn btn-primary" %>
	<% end %>
   </div>
  </div>
</div>