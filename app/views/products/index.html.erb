<div class="container">
 <div class="row">
  <div class="col-lg-12">
  <h4><%= "商品一覧 (全#{@products.count}件)" %></h4>
    <% @posts.each do |product| %>
       <div class="product-box">
          <table>
            <tr>
              <th>
                 <div class="space"><%= link_to product_path(product) do %>
                 <%= attachment_image_tag(product, :image, size: "250x150", fallback: "default.png") %>
                 <% end %></div>
              </th>
            </tr>
            <tr>
              <th>
                 <%= product.name %>
              </th>
            </tr>
            <tr>
              <th>
                 ￥<%= (product.price * 1.1).to_i %>
              </th>
            </tr>
          </table>
       </div>
    <% end %>
  </div>
  <%= paginate @posts %>
 </div>
</div>

