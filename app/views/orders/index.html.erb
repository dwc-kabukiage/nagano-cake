<div class="container">
  <h2 class="pl-5">注文履歴一覧</h2>
  <div>
    <table class="table  table-bordered table-hover">
      <thead>
        <th style="width: 10%">注文日</th>
        <th style="width: 20%">配送先</th>
        <th style="width: 15%">注文商品</th>
        <th style="width: 10%">支払い金額</th>
        <th style="width: 10%">ステータス</th>
        <th style="width: 10%">注文詳細</th>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <td>
          <%= order.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
          〒<%= order.postcode %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td></td>
        <td></td>
        <td>
          <%= order.received_status %>
        </td>
        <td>
          <%= link_to "表示する" ,  order_path(order), class:"btn btn-primary" %>
        </td>
      </tbody>
      <% end %>
    </table>
  </div>
  </div>
