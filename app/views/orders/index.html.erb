<h1>注文履歴一覧</h1>
<table class="table  table-bordered">
    <thead>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
    </thead>
   
        <% @orders.each do |order| %>
         <tbody>
        <td>
            <%= order.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
            〒<%= order.postcode %><br>
            <%= order.address %><br>
            <%= order.name %>
        </td>
        <td></td>
        <td></td>
        <td>
            <%= order.received_status %>
        </td>
        <td>
            <%= link_to "表示する" ,  order_path(order), class:"btn btn-primary" %>
        </td>
          </tbody>
        <% end %>
  
 </table>