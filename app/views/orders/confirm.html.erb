<h2>注文情報確認</h2>
 
<table class="table  table-bordered">
    <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
    </tr>
</table>
<table class="table  table-bordered">
    <h5>請求情報</h5>
    <tr>
        <th>送料</th>
        <td><%= @order.freight %></td>
    </tr>
    <tr>
        <th>商品合計</th>
        <td></td>
    </tr>
    <tr>
        <th>請求金額</th>
        <td><%= @order.claim %></td>
    </tr>
</table>
<h3>支払い方法</h3>
<%= @order.payment %>
<h3>お届け先</h3>
   <%= "#{@order.postcode} #{@order.address} 　#{@order.name}" %>
  
   <%= form_for @order do |f| %>
    <%= f.hidden_field :postcode %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :payment %>
    <%= f.hidden_field :claim %>
     <%= f.submit '投稿する' %>
<% end %>