<div class="container">
  <h2 class="pl-5">注文履歴詳細</h2>
  <div class="row">
    <div class="col-md-8">
      <table class="table  table-bordered">
        <h5>注文情報</h5>
        <tr>
          <th style="width: 20%">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postcode %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.received_status %></td>
        </tr>
      </table>
      </div>
      <div class="col-md-4">
        <table class="table  table-bordered">
          <h5>請求情報</h5>
          <tr>
            <th style="width: 40%">商品合計</th>
            <td></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.freight %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.claim %></td>
          </tr>
        </table>
      </div>
    </div>
  <table class="table  table-bordered">
       <h5>注文内容</h5>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
      <% @order_details.each do |order_detail| %>
    <tr>

      <td><%= order_detail.product.name %></td>
      <td id = "taxprice"><%= (order_detail.product.price * 1.1).to_i %></td>
      <td><%= order_detail.number %></td>
      <td></td>
   </tr>
      <% end %>
  </table>

</div>